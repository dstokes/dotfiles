[colors]
background = #fdf6e3
background-alt = #eee8d5
; background = #222
; background-alt = #444
foreground = #003541
foreground-alt = #002833
; foreground = #dfdfdf
; foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/default]
width = 100%
height = 27
radius = 6.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-left-size = 10
border-right-size = 10
border-top-size = 10
border-bottom-size = 0
border-color = rgba(255, 255, 255, 1)

padding-top = 2
padding-bottom = 2
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Hack Nerd Font Mono:pixelsize=12;3
font-1 = Hack Nerd Font Mono:pixelsize=20;3
font-2 = Hack Nerd Font Mono:pixelsize=10;3
;font-0 = fixed:pixelsize=10;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = spotify
modules-right = alsa cpu temperature date powermenu

; tray-position = right
; tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index% %{T2}%icon%%{T-}
label-focused-background = ${colors.background-alt}
label-focused-underline =
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %{T2}%icon%%{T-}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index% %{T2}%icon%%{T-}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% %{T2}%icon%%{T-}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

ws-icon-0 = 1;ï„¡
ws-icon-1 = 2;ï‰¨
ws-icon-2 = 3;ï†˜
ws-icon-3 = 4;ïƒ 
ws-icon-4 = 5;ï†¼

[module/spotify]
type = custom/script
exec-if = pgrep -x spotify
exec = sh ~/.config/polybar/spotify
