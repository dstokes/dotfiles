alias ..="cd .."
alias ...="cd ../.."
alias -- -="cd -"
alias x="exit"

alias ag="ag -i -S"

alias g=git
alias gti=git
alias gpg1=/usr/local/bin/gpg
alias gpg=/usr/local/bin/gpg2
alias h=history
alias v=vim
alias vi=vim
alias vim="vim -p -w ~/.vimlog_\$(date '+%Y%m%d').$RANDOM"
alias ls="ls -G"
alias la="ls -alsG"
alias sites='cd ~/Sites'
alias ios='open -a /Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app/'
function pgrep() { ps aux | sed -e "1p" -e "/$@/!d" | grep -v "\!d$" }

# vagrant aliases
alias vg=vagrant
alias vgs="vagrant ssh"
alias vgu="vagrant up"
alias vgd="vagrant destroy -f"

alias dots="vim ~/.zshrc ~/.localrc ~/.aliases ~/.tmux.conf ~/.gitconfig"
alias jsonp="perl -pe 's/^[^\(]*\((.*)\);?/\1/gi' | json"

alias fdns="sudo discoveryutil udnsflushcaches"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""
