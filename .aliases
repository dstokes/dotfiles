alias ..="cd .."
alias ...="cd ../.."
alias -- -="cd -"
alias x="exit"

alias ag="ag -i -S"

alias g=git
alias gti=git
alias v=vim
alias vi=vim
alias vim="vim -p -w ~/.vimlog_\$(date '+%Y%m%d')"
alias ls="ls -G"
alias la="ls -alsG"
alias sites='cd ~/Sites'
alias tmux="TERM=xterm-256color tmux"
alias ios='open -a /Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app/'
function pgrep() { ps aux | sed -e "1p" -e "/$@/!d" | grep -v "\!d$" }

alias dots="vim ~/.zshrc ~/.localrc ~/.aliases ~/.tmux.conf ~/.gitconfig"
alias jsonp="perl -pe 's/^[^\(]*\((.*)\);?/\1/gi' | json"
alias todo="v ~/TODO.md"

alias fdns="sudo killall -HUP mDNSResponder"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""
