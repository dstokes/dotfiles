! ------------
! Xft settings
! ------------
Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

! --------------
! URxvt settings
! --------------
URxvt.intensityStyles:      false
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0

URxvt.iso14755: false
URxvt.iso14755_52: false

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Hack Nerd Font Mono:style=Regular:pixelsize=15:minspace=False, xft:DejaVu Sans Mono:size=15
URxvt*boldFont: xft:Hack Nerd Font Mono:style=Bold:pixelsize=15:minspace=False, xft:DejaVu Sans Mono:size=15

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Extension
URxvt.perl-ext-common: resize-font
URxvt.keysym.C-0: resize-font:reset
URxvt.keysym.C-equal: resize-font:bigger

!!Source http://github.com/altercation/solarized

*background: #fdf6e3
